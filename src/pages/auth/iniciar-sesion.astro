---
import AuthLayout from "../../layouts/AuthLayout.astro";
import LoginForm from "../../components/LoginForm.jsx";
---
<AuthLayout title="Inicio de sesión · Stoqly" showTopRightButton={false}>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-start">
    <!-- Lado izquierdo: copy grande -->
    <section class="order-2 md:order-1">
      <h1 class="text-2xl md:text-3xl font-extrabold text-slate-800 leading-tight">
        Ingresa tu e-mail o credencial<br class="hidden md:block" />
        corporativa para ingresar
      </h1>
    </section>

    <!-- Lado derecho: card -->
    <section class="order-1 md:order-2 flex justify-center">
      <LoginForm client:load />
    </section>
  </div>
</AuthLayout>
