---
import "../styles/global.css";
const { title = "Stoqly", showTopRightButton = true } = Astro.props;
---
<html lang="es" class="h-full">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
  </head>

  <!-- üëá clave: el body debe ser flex y ocupar toda la altura -->
  <body class="flex flex-col min-h-screen bg-white text-slate-900">

    <!-- HEADER -->
    <header class="bg-white border-b border-slate-200">
      <div class="mx-auto max-w-6xl h-16 px-4 md:px-8 flex items-center justify-between">
        <a href="/" class="flex items-center gap-2">
          <img src="src/assets/Stoqly.png" alt="Stoqly" class="h-35 w-35" />
        </a>
        {showTopRightButton && (
          <a
            href="/auth/iniciar-sesion"
            class="rounded-md px-4 py-2 text-sm font-medium bg-blue-600 text-white hover:bg-blue-700 transition"
          >
            Iniciar sesi√≥n
          </a>
        )}
      </div>
    </header>

    <!-- MAIN -->
    <!-- üëá esta parte se expande y empuja el footer hacia abajo -->
    <main class="flex-grow mx-auto max-w-6xl px-4 md:px-8 py-10">
      <slot />
    </main>

    <!-- FOOTER -->
    <footer class="border-t border-slate-200 bg-white">
      <div
        class="mx-auto max-w-6xl px-4 md:px-8 py-6 flex justify-center gap-8 text-sm text-slate-500"
      >
        <a
          href="/legales/condiciones"
          class="hover:text-slate-700 transition-colors"
        >
          Condiciones de uso
        </a>
        <a
          href="/legales/privacidad"
          class="hover:text-slate-700 transition-colors"
        >
          Aviso de privacidad
        </a>
      </div>
    </footer>

  </body>
</html>
